товары = {'яблоко': 50, 'банан': 70, 'апельсин': 60, 'груша': 80}
баланс = int(input('Введите ваш баланс: '))
print('Список товаров:')
for товар, цена in товары.items():
    print(товар, '-', цена)
while True:
    товар = input('Введите название товара: ')
    if товар in товары:
        if баланс >= товары[товар]:
            баланс -= товары[товар]
            print('Вы купили', товар, 'за', товары[товар], 'рублей. Остаток на балансе:', баланс, 'рублей.')
        else:
            print('У вас недостаточно денег для покупки', товар, '.')
    else:
        print('Такого товара нет в списке.')
